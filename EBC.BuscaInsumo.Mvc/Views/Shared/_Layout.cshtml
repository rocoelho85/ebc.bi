<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css/Site.css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	@RenderBody()

	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)

	<div id="headerContainer" style="height: auto; width: 100%; position: fixed; top: 0; left: 0; background-color: #E9EAEC; z-index: 999;">
		<div style="width: 100%; position:relative; text-align:center; padding-bottom:15px;">
			<h3>Bem vindo ao Busca Insumos!</h3>
			<br />
			<a href="~/DoMyRecipe">
				<img src="~/Content/images/food.svg" alt="" style="width:32px; padding-right:10px;" />
			</a>
			<img src="~/Content/images/malt.svg" alt="" style="width: 32px; padding-right: 10px;" />
			<img src="~/Content/images/worms.svg" alt="" style="width:32px;" />

		</div>

	</div>
</body>

</html>
